{
  "version": "1",
  "defaulttheme": "Minactyl",
  "website": {
    "port": 8000, //By default, 8000 is the port where the website is hosted on, edit this to your own port and dont forget to edit the nginx config
    "secret": "ExampleSecret", //this is required for you to run your Minactyl Instance
    "maintenance": true,

    "sitekey": "",
    "secretkey": "",
    "note": "You Can Get These From https://www.google.com/recaptcha/admin, this is to ensure security of the host, We highly recommend getting it"
  },
  "companyinfo": {
    "owner": "", //put your name here
    "companyname": "", // put your host's name here, it will decide the sidebar heading as well as the footer
    "clientlink": "" //put your client domain here, it will automatically make a privacy policy and tos for you.
   },
  "pterodactyl": {
    "domain": "your_panel_link_goes_here", //paste your panel link here
    "key": "ptla_ThisIsAnExampleKey" // get this api key from your pterodactyl panel
  },
  "google_ads": {
    "enabled": false,
    "script": "",
    "note": "Using this, you can easily apply ad's to your client, for example, Google Adsense, Adsterra, etc."
  },
  "custom_ads":{
    "enabled": false, //enable this if you want this feature to work
    "pic": "", //the advertisement link
    "link": "", //the link where the user will be directed to on click
    "width": "468",
    "height": "60",
    "note": "this feature allows you to display a custom advertisement on the client panel"
  },
 "widget": {
    "enabled": false,
    "server_id": "",
    "channel_id": "",
    "note": "Use this feature to easily integrate widgetbot.io into your client. Follow the guide on https://widgetbot.io to set it up."
  },
  "status":{
    "enabled": true, //enable this if you want this feature to work
    "url": "https://example.status.link" //your status page link goes here
  },
    "giftres":{
    "enabled": true, //enable this if you want your users to gift
    "note": "This allows you to decide if you want your users to gift resources or not"
  },
  
    "discordserver":{
    "enabled": true, //enable this if you want this feature to work
    "invitelink": "https://discord.gg/nmpzPF5rnW" //your discord server link goes here
  },
    "donate":{
    "enabled": true, //enable this if you want this feature to work
    "link": "" //the link where people can donate
  },

 
  "database": "database.sqlite", //main database file, by default its database.sqlite.
  "api": {
    "client": {
       "api": {
         "enabled": false, //leave it to false
         "code": ""
       },
       "j4r": {
        "enabled": true, //enable this if you want this feature to work
        "ads": [
          {
            "name": "Name",
            "invite": "Discord Server invite",
            "id": "Server Id",
            "ram": "512",
            "disk": 512,
            "cpu": 20
          },
          {
            "name": "Name",
            "invite": "Discord Server invite",
            "id": "Server Id",
            "ram": "512",
            "disk": 512,
            "cpu": 20
          }
        ]
      },
       "bot": {
         "token": "",
         "joinguild": {
           "_comment": "The Discord bot must be in these servers and have invite permissions.",
           "enabled": false,
           "guildid": [""],
           "forcejoin": false,
           "registeredrole": null
        }
      },
      "webhook": {
        "_comment": "URL of the webhook to send client's logs to.",
        "webhook_url": "https://discord.com/api/webhooks/12345676/huwhduwhdwudhuwhawuhdwuwhz",
        "auditlogs": {
          "_comment": "This feature allows you to log actions, and get an overview of a users actions (only works if done with qwakeactyl, not ptero)",
          "enabled": false, //enable this if you want logs to be sent to the webhook
          "_comment2": "The types of notifications disabled. Values: ADMIN, LOGIN, SERVER, COUPONREDEEM",
          "disabled": [] //here you can add audit logs that you dont want to receive 
        }
      },
      "passwordgenerator": {
        "signup": true, //this will generate a password for the user on signup. Disable it if you dont want it to generate a password on signup.
        "length": 4 //the lenght of each of the password generated
      },
      "allow": {     //here you can choose what users can do or cannot do
        "newusers": true,
        "regen": true,
        "server": {
          "create": true,
          "modify": true,
          "delete": true
        },
        "overresourcessuspend": true, //this feature will monitor every server and will suspend it if they use more resources than they have.
        "renewsuspendsystem": { //here you can decide if you want renewal for the servers or not.
          "_comment": "This feature requires a restart in order to work. Also, this requires every server to start suspended, or else this feature would not work for some servers.",
          "enabled": false,
          "time": 3600,
          "cost": 0
        }
      },
      "oauth2": {
        "_comment": "Go to https://discord.dev/ and create an application to set these up.",
        "id": "12345678", //your discord application id
        "secret": "HduwhDUhwdIjwKdwMDwwa", //your discord application secret
        "link": "", //your client's link, MAKE SURE TO ADD a redirect, and please include your callback path in the redirect. eg: https://client.example.in/callback would be your redirect
        "callbackpath": "/callback",
        "prompt": true, 

        "ip": { //basically checks users for alts and helps prevent bots. Note : Recaptcha is required for this to work
          "trust x-forwarded-for": true,
          "block": [],

          "_comment": "'duplicate check' is an anti-alt check by IPs.",
          "duplicate check": false,

          "_comment2": "'cookie alt check' is an anti-alt check by cookies.",
          "cookie alt check": true
        }
      },
      "ratelimits": { //this enabled rate limits for users. If a user if comitting actions quickly, he will be given a ratelimit
        "enabled": true,

        "trust x-forwarded-for": true,

        "requests": 30,
        "per second": 60
      },
      "packages": { //default is the package you want to give to your users on default
        "default": "default",
        "list": {
          "default": {
            "ram": 2048,
            "disk": 4096,
            "cpu": 100,
            "servers": 2
          }
        },
          "premium": "premium", //here is an extra package, edit it as you like.
          "list": {
            "default": {
              "ram": 2048,
              "disk": 4096,
              "cpu": 100,
              "servers": 2
            }
          }
      },
      
      "locations": { //add nodes to the client. NOTE: each node requires its own location
        "1": {
          "name": "India-1",

          "_comment": "Make 'package' be null to allow anyone with enough resources in their plan to create a server with this location. Also, make the 'package' variable an array, like [], with the location names with quotes to make a user be required to have a plan in order to use the package.",
          "package": null
        },
        "2": {
          "name": "India-2",

          "_comment": "Make 'package' be null to allow anyone with enough resources in their plan to create a server with this location. Also, make the 'package' variable an array, like [], with the location names with quotes to make a user be required to have a plan in order to use the package.",
          "package": null
        }
      },
      "eggs": { //add eggs to your client
        "paper": {
          "display": "Paper",
          "minimum": {
            "ram": 1024,
            "disk": 1024,
            "cpu": 50
          },
          "maximum": {
            "ram": null,
            "disk": null,
            "cpu": null
          },
          "info": {
            "egg": 3,
            "docker_image": "ghcr.io/pterodactyl/yolks:java_17",
            "startup": "java -Xms128M -Xmx{{SERVER_MEMORY}}M -Dterminal.jline=false -Dterminal.ansi=true -jar {{SERVER_JARFILE}}",
            "environment": {
              "SERVER_JARFILE": "server.jar",
              "BUILD_NUMBER": "latest"
            },
            "feature_limits": {
              "databases": 1,
              "backups": 1,
              "allocation": 1
            }
          }
        },
        "pocketmine": {
          "display": "Pocketmine",
          "minimum": {
            "ram": 512,
            "disk": 512,
            "cpu": 50
          },
          "maximum": {
            "ram": null,
            "disk": null,
            "cpu": null
          },
          "info": {
            "egg": 45,
            "docker_image": "ghcr.io\/parkervcp\/yolks:debian",
            "startup": "\/bin\/php7\/bin\/php .\/PocketMine-MP.phar --no-wizard --disable-ansi",
            "environment": {
              "VERSION": "PM4"
            },
            "feature_limits": {
              "databases": 1,
              "backups": 1
            }
          }
        },
        "Bedrock": {
          "display": "Bedrock",
          "minimum": {
            "ram": 512,
            "disk": 512,
            "cpu": 50
          },
          "maximum": {
            "ram": null,
            "disk": null,
            "cpu": null
          },
          "info": {
            "egg": 50,
            "docker_image": "ghcr.io\/parkervcp\/yolks:box64",
            "startup": "box64 .\/bedrock_server",
            "environment": {
              "BEDROCK_VERSION": "latest",
              "DIFFICULTY": "easy",
