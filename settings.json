              "GAMEMODE": "survival",
              "LD_LIBRARY_PATH": ".",
              "SERVERNAME": "MineCube Hosting"
            },
            "feature_limits": {
              "databases": 1,
              "backups": 1
            }
          }
        },
      "Nukkit": {
          "display": "Nukkit",
          "minimum": {
            "ram": 512,
            "disk": 512,
            "cpu": 50
          },
          "maximum": {
            "ram": null,
            "disk": null,
            "cpu": null
          },
          "info": {
            "egg": 46,
            "docker_image": "quay.io\/pterodactyl\/core:java-glibc",
            "startup": "java -Xms128M -Xmx{{SERVER_MEMORY}}M -jar {{SERVER_JARFILE}}",
            "environment": {
              "NUKKIT_VERSION": "latest",
              "SERVER_JARFILE": "server.jar",
              "DL_PATH": ""
            },
            "feature_limits": {
              "databases": 1,
              "backups": 1
            }
          }
        },
      "Spigot": {
          "display": "Spigot",
          "minimum": {
            "ram": 512,
            "disk": 512,
            "cpu": 50
          },
          "maximum": {
            "ram": null,
            "disk": null,
            "cpu": null
          },
          "info": {
            "egg": 49,
            "docker_image": "ghcr.io\/pterodactyl\/yolks:java_17",
            "startup": "java -Xms128M -Xmx{{SERVER_MEMORY}}M -jar {{SERVER_JARFILE}}",
            "environment": {
              "SERVER_JARFILE": "server.jar",
              "DL_VERSION": "latest",
              "DL_PATH": ""
            },
            "feature_limits": {
              "databases": 1,
              "backups": 1
            }
          }
        }
      },
      "coins": { //if you want coins and store to be enabled. Enabling this will allow users to buy things from the resource shop using coins.
        "enabled": true,
        "store": {
          "_comment": "The cost and per is not intended to used with 0. This is not intended to sell resources for coins. Make sure coins are enabled too, or else there can be errors.",
          "enabled": true, //if store is enabled or not
          "ram": {
            "cost": 2500, //cost of ram
            "per": 250 //per amount of ram
          },
          "disk": {
            "cost": 250, //cost of disk
            "per": 100 //per amount of disk
          },
          "cpu": {
            "cost": 150, //cost of cpu cores
            "per": 5 //per amount of cpu
          },
          "servers": {
            "cost": 200, //cost of extra server slots
            "per": 1 //per amount of servers
          }
        }
      }
    },
    "arcio": {
      "_comment": "You can make an arc.io widget on https://arc.io. You can get money using arc.io.",
      "enabled": true,
      "widgetid": "", //the arc io widget id

        "afk page": { //this is most benefitable for arc.io users but you can use afk without arc.io.
          "_comment": "This will not effect any current arc.io sessions, and will require a restart to kick everyone out of the websocket sesison.",
